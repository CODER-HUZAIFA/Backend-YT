<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/profile.css">
    <style>
        body::-webkit-scrollbar {
            display: none;
        }
    </style>
    <title>Profile Page</title>
</head>

<body>
    <nav class="nav">
        <div class="logo">
            <p>Blogs</p>
        </div>

        <div class="leftNav">
            <div class="icons">
                <a href="/profile/<%= user.username %>/blogs"><i class="ri-edit-2-line" id="write"></i></a>
                <i class="ri-notification-2-line" id="notification"></i>
            </div>
            <div class="profileImage">
                <img src="../images/profileImage/<%= user.profileImage %>" alt="<%= user.username %>" class="img">
            </div>
        </div>
    </nav>

    <!-- Main Body -->

    <main class="main">
        <div class="mainLeft">
            <div>
                <div class="profileName">
                    <p>
                        <%= profileName %>
                    </p>
                </div>
                <div class="blogWritten">
                    <% if (Blogs.length > 0) { %>
                        <% Blogs.forEach((e) => {%>
                            <div class="blogs" title="<%= e.title.split("_").join(" ") %>">
                                <img src="../images/blogThumbnail/<%= e.blogImage %>" class="img" alt="<%= e.title.split("_").join(" ") %>">
                                <div class="blogSpace">
                                    <div class="title"><%= e.title.split("_").join(" ") %></div>
                                    <a href="/profile/<%= username %>/blogs/<%= e.title %>">
                                        <button class="btn">Read</button>
                                    </a>
                                </div>
                            </div>
                    <% }) %>
                    <% } else { %>
                        <div class="noBlogs">
                            Any blogs is not available
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="mainRight">
            <div>
                <img src="../images/profileImage/<%= profileImage %>" alt="<%= profileName %>" class="img"> 
                <div class="userName">
                    <%= profileName %>
                </div>
                <div class="userFollowers">
                    <% if(profileFollowers > 10000000) { %>
                        <p> <%= profileFollowers/1000000 %>M Followers</p>
                    <% } else if(profileFollowers > 100000 ){ %>
                        <p> <%= profileFollowers/100000 %>Lakh Followers</p>
                    <% } else if (profileFollowers > 1000) { %>
                        <p> <%= profileFollowers/1000 %>K Followers</p>
                    <% } else { %>
                            <p> <%= profileFollowers %> Followers</p>
                    <% } %>
                </div>
                <div class="userDesc">
                    <%= profileDesc %>
                </div>
                <% if (profileOwner==false) { %>
                    <% if(follower) { %>
                        <div class="rightBtn">
                            <button class="followed">Followed</button>
                        </div>
                    <% } else { %>
                        <div class="rightBtn">
                            <form action="/profile/<%= user.username %>/follow/<%= username %>" method="post">
                                <button class="follow">Follow</button>
                            </form>
                        </div>
                    <% } %>
                <%} else {%>
                    <div class="edit">Edit Profile</div>
                <% } %>
            </div>

            <!-- <div class="rightBottom"></div> -->
        </div>
    </main>

    <script src="../js/profile.js"></script>
</body>

</html>